<?xml version="1.0"?>
<robot name="puzzlebot">

  <link name="base_link">
    <inertial>
      <mass value="0.0001"/> <!-- Negligible mass for dummy link -->
      <origin xyz="0 0 0" />
      <inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
    </inertial>
  </link>

  <!-- Chassis -->
  <link name="chassis">
  <!-- <pose relative_to='__model__'>0 0 0.05 0 0 0</pose> -->
    <inertial>
      <mass value="0.9"/> <!-- Chassis mass in kg -->
      <origin rpy="1.5708 0 1.5708" xyz="0 0 0.05" /> <!-- Centered in chassis, 4.3 cm height / 2 -->
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.002" iyz="0.0" izz="0.002"/>
    </inertial>
    <visual>
      <origin rpy="1.5708 0 1.5708" xyz="0 0 0.05" />
      <geometry>
        <mesh filename="package://puzzlebot_challenge/models/MCR2_1000_13_Chassis.stl"/>
      </geometry>
      <material name="white">
        <color rgba="1.0 1.0 1.0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin rpy="1.5708 0 1.5708" xyz="0 0 0.05" />
      <geometry>
        <mesh filename="package://puzzlebot_challenge/models/MCR2_1000_13_Chassis.stl"/>
      </geometry>
    </collision>

    <sensor type="camera" name="camera_sensor">
      <pose relative_to='camera_frame'>0 0 0 0 0 0</pose>
      <topic>camera</topic>
      <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
              <width>1280</width>
              <height>720</height>
          </image>
          <clip>
              <near>0.1</near>
              <far>100</far>
          </clip>
      </camera>
      <always_on>1</always_on>
      <update_rate>10</update_rate>
      <visualize>false</visualize>
    </sensor>
  </link>

  <!-- Left Wheel -->
  <link name="left_wheel">
    <inertial>
      <mass value="0.0471238898038469"/> <!-- Left wheel mass in kg -->
      <origin rpy="0 1.5708 -1.5708" xyz="0.0 0.0 0.0" />
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00002" iyz="0.0" izz="0.00001"/>
    </inertial>
    <visual>
      <origin rpy="0 1.5708 -1.5708" xyz="0.0 0.0 0.0"/>
      <geometry>
        <mesh filename="package://puzzlebot_challenge/models/MCR2_1000_1_1_Wheel_Coupler_2.stl"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0 1.5708 -1.5708" xyz="0.0 0.0 0.0" />
      <geometry>
        <mesh filename="package://puzzlebot_challenge/models/MCR2_1000_1_1_Wheel_Coupler_2.stl"/>
      </geometry>
    </collision>
  </link>

  <!-- Right Wheel -->
  <link name="right_wheel">
    <inertial>
      <mass value="0.0471238898038469"/> <!-- Right wheel mass in kg -->
      <origin rpy="0 -1.5708 -1.5708" xyz="0.0 0.0 0.0" />
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00002" iyz="0.0" izz="0.00001"/>
    </inertial>
    <visual>
      <origin rpy="0 -1.5708 -1.5708" xyz="0.0 0.0 0.0"/>
      <geometry>
        <mesh filename="package://puzzlebot_challenge/models/MCR2_1000_1_1_Wheel_Coupler_2.stl"/>
      </geometry>
      <material name="black">
        <color rgba="0 0 0 1.0"/>
      </material>
    </visual>
    <collision>
      <origin rpy="0 -1.5708 -1.5708" xyz="0.0 0.0 0.0" />
      <geometry>
        <mesh filename="package://puzzlebot_challenge/models/MCR2_1000_1_1_Wheel_Coupler_2.stl"/>
      </geometry>
    </collision>
  </link>


 



  <!-- Joints -->
  <joint name="chassis_joint" type="fixed">
    <parent link="base_link"/>
    <child link="chassis"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>
  
  <joint name="wheel_left_joint" type="continuous">
    <parent link="chassis"/>
    <child link="left_wheel"/>
    <origin xyz="0.05 0.085 0.05" rpy="0 0 0"/> <!-- Left wheel position -->
    <axis xyz="0 1 0"/>
  </joint>

  <joint name="wheel_right_joint" type="continuous">
    <parent link="chassis"/>
    <child link="right_wheel"/>
    <origin xyz="0.05 -0.085 0.05" rpy="0 0 0"/> <!-- Right wheel position -->
    <axis xyz="0 1 0"/>
  </joint>  



  <gazebo>
    <plugin name="gz::sim::systems::DiffDrive" filename="ignition-gazebo-diff-drive-system">
      <left_joint>wheel_left_joint</left_joint>
      <right_joint>wheel_right_joint</right_joint>
      <wheel_separation>0.19</wheel_separation> <!-- Distance between wheels -->
      <wheel_radius>0.05</wheel_radius>          <!-- Wheel radius -->
      <topic>/cmd_vel</topic>                    <!-- Ignition topic for velocity commands -->
    </plugin>
  </gazebo>

   <!-- RPLidar Link -->
  <link name="rplidar_link">
    <inertial>
      <mass value="0.1"/>
      <origin xyz="0 0 0.01" rpy="0 0 0"/>
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <cylinder radius="0.035" length="0.027"/> <!-- Adjusted size for RPLidar -->
      </geometry>
      <material name="black">
        <color rgba="0.0 0.0 0.0 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="rplidar_joint" type="fixed">
    <parent link="chassis"/>
    <child link="rplidar_link"/>
    <origin xyz="0.05 0 0.16" rpy="0 0 0"/> <!-- Position RPLidar above chassis -->
  </joint>

  <gazebo reference="rplidar_link">
    <sensor name="rplidar" type="gpu_lidar">
      <pose>0 0 0.0 0 0 0</pose>
      <topic>scan</topic>
      <update_rate>2</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>720</samples>
            <resolution>1</resolution>
            <min_angle>-1.396263</min_angle>
            <max_angle>1.396263</max_angle>
          </horizontal>
          <vertical>
            <samples>1</samples>
            <resolution>1</resolution>
            <min_angle>0</min_angle>
            <max_angle>0</max_angle>
          </vertical>
        </scan>
        <range>
          <min>0.1</min>
          <max>12.0</max>
          <resolution>0.01</resolution>
        </range>
      </ray>
      <always_on>1</always_on>
      <visualize>true</visualize>
    </sensor>     
  </gazebo>

  <!-- <gazebo>
      <plugin filename="ignition-gazebo-sensors-system" name="ignition::gazebo::systems::Sensors">
          <render_engine>ogre2</render_engine>
      </plugin>
  </gazebo> -->

  <link name="camera_link">
    <inertial>
      <mass value="0.01"/>
      <origin xyz="0.1 0 0.2"/> <!-- Adjust as needed -->
      <inertia ixx="0.0001" ixy="0.0" ixz="0.0" iyy="0.0001" iyz="0.0" izz="0.0001"/>
    </inertial>
    <visual>
      <geometry>
        <box size="0.04 0.02 0.02"/> <!-- Approximate camera size -->
      </geometry>
      <material name="gray">
        <color rgba="0.5 0.5 0.5 1.0"/>
      </material>
    </visual>
  </link>

  <joint name="camera_joint" type="fixed">
    <parent link="chassis"/>
    <child link="camera_link"/>
    <origin xyz="0.1 0 0.1" rpy="0 0 0"/> <!-- Position relative to chassis -->
  </joint>

  <gazebo reference="camera_link">
    <sensor name="camera" type="camera">
        <camera>
          <horizontal_fov>1.047</horizontal_fov>
          <image>
            <width>320</width>
            <height>240</height>
          </image>
          <clip>
            <near>0.1</near>
            <far>100</far>
          </clip>
        </camera>
        <always_on>1</always_on>
        <update_rate>30</update_rate>
        <visualize>true</visualize>
        <topic>camera</topic>
      </sensor>
  </gazebo>

  <gazebo>
    <plugin
      filename="ignition-gazebo-sensors-system"
      name="gz::sim::systems::Sensors">
      <render_engine>ogre2</render_engine>
    </plugin>
  </gazebo>



</robot>